<UserControl x:Class="FirstXAMLApp.BasicInformation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="Cornsilk">
        <Grid.RowDefinitions>
            <RowDefinition Height="20*" />
            <RowDefinition Height="80*" />
        </Grid.RowDefinitions>
        <TextBlock Text="Basic Information"  TextAlignment="Center" FontSize="24"/>
        <StackPanel Grid.Row="1">
            <TextBlock Text="First Name" />
            <TextBox Name="FirstNameBox" />
            <TextBlock Text="Last Name" />
            <TextBox Name="LastNameBox" />
            <TextBlock Text="Phone Number" />
            <TextBox Name="PhoneNumberBox" />
            <TextBlock Text="DayOfBirth" />
            <TextBox Name="DayOfBirthBox" />
            <TextBlock Text="Month of Birth" />
            <TextBox Name="MonthOfBirthBox" />
            <Button Name="DisplayInfoButton" Content="Display Info" Click="DisplayInfoButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
